@page
@model WebShop.Pages.Admin.Products.EditModel
@{
}


<h2 class="text-center mb-5">Edit Product</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger" role="alert">
        @Model.errorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (Model.successMessage.Length > 0)
{
    <div class="alert alert-success" role="alert">
        @Model.successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Products.Id" />
                    
                </div>

            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input asp-for="ProductDto.Name" class="form-control" />
                    <span asp-validation-for="ProductDto.Name" class="text-danger"></span>
                </div>

            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input asp-for="ProductDto.Brand" class="form-control" />
                    <span asp-validation-for="ProductDto.Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ProductDto.Category">
                        <option value="Electronics">Electronics</option>
                        <option value="Clothing">Clothing</option>
                        <option value="Grocery">Grocery</option>
                        <option value="Books">Books</option>
                    </select>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input asp-for="ProductDto.Price" class="form-control" />
                    <span asp-validation-for="ProductDto.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea asp-for="ProductDto.Description" class="form-control"></textarea>
                    <span asp-validation-for="ProductDto.Description" class="text-danger"></span>
                </div>

            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <img src="/img/@Model.Products.ImageFileName" width="150"/>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input asp-for="ProductDto.ImageFile" type="file" class="form-control" />
                    
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created At</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Products.CreatedAt.ToString("MM/dd/yyyy")" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4"></div>
                <div class="col-sm-8">
                    <button type="submit" class="btn btn-primary">submit</button>
                </div>
                <div>
                    <a asp-page="/Admin/Products/Index" class="btn btn-secondary">Back</a>

                </div>
            </div>

        </form>

    </div>

</div>